while true;
do
    clear;
    echo ">>>>>>>>>>>>>>> CPU Info <<<<<<<<<<<<<<<"
    sensors | egrep '^Core|^fan1';

    echo""
    echo ">>>>>>>>>>>>>>> GPU Info <<<<<<<<<<<<<<<"
    nvidia-smi --query-gpu="temperature.gpu,utilization.gpu" --format=csv,noheader,nounits  | awk '{print NR-1  " :           " $s}' | sed 's/^/GPU\ /' | sed 's/,\ /Â°C\ \ (utilization:\ /' | sed 's/$/\ %)/';

    echo""
    sleep 2;
done
