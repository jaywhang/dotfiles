# TODO

#
# bspwm hotkeys
#

# Quit bspwm
super + ctrl + BackSpace
	bspc quit
# Close window
super + q
	bspc window -c
# Next tiling mode
super + t
	bspc desktop -l next
# "Balance" the split ratios of the tree of the selected desktop,
# so all siblings occupy the same area.
super + b
	bspc desktop -B
# Reset the split ratios of the tree of the selected desktop
super + e
    bspc desktop -E
# Toggle float
super + f
	bspc window -t floating
# Toggle maximize
super + m
    bspc window -t fullscreen
# Move to prev/next window
super + {j,k}
	bspc window -f {next,prev}
# Swap position with prev/next window
super + shift + {j,k}
    bspc window -s {next,prev}
# Move to left/right window
super + {h,l}
	bspc window -f {left,right}
# Swap position with left/right window
super + shift + {h,l}
	bspc window -s {left,right}
# Rotate the arrangement of windows
super + Tab
    bspc desktop --rotate 90
# Choose desktop 1-5
F{1-5}
    bspc desktop -f ^{1-5}
# Move the selected window to target desktop
ctrl + F{1-5}
    bspc window -d ^{1-5}
# Move the current window to the target desktop
super + ctrl + {1-5}
	bspc window -d ^{1-5}
# Move to prev/next desktop
super + {comma,period}
    bspc desktop -f {prev,next}
super + shift + {comma,period}
    bspc window -d {prev,next}
# Preselet the splitting area of the current window
super + ctrl + {h,j,k,l}
	bspc window -p {left,down,up,right}
# Resize the window in given direction
super + alt + {h,j,k,l}
	bspc window -e {left -10,down +10,up -10,right +10}
# Mouse events
~button1
	bspc pointer -g focus
super + button{1-3}
	bspc pointer -g {move,resize_side,resize_corner}
super + !button{1-3}
	bspc pointer -t %i %i
super + @button{1-3}
	bspc pointer -u

#
# Other miscellaneous hotkeys
#

super + Return
	urxvt
# Open a floating terminal
super + Escape
    urxvt -name urxvt_floating
# Start chrome in incognito mode
super + 1
    google-chrome-stable --incognito
{super,alt} + space
    rofi -show run

# make sxhkd reload its configuration files:
super + shift + Escape
	pkill -USR1 -x sxhkd
